/**index.wxss**/
.line_canvas{
  width: 95%;
  height: 40%;
  position:absolute;
  top: 11%;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: rgb(226, 221, 221) 4rpx 4rpx 15rpx;
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.card_container{
  width: 100%;
  position: absolute;
  top: 52%;
  padding-bottom: 30rpx;
}

.card{
  width:95%;
  height: 150rpx;
  margin: 0 auto 15rpx auto;
  border-radius: 8rpx;
  background-color: #fff;
  box-shadow: rgb(226, 221, 221) 4rpx 4rpx 15rpx;
  display:flex;
  justify-content: space-between;
}

.title{
  font-size:35rpx;
  font-weight: bold;
  color: rgb(66, 64, 64);
}

.left{
  padding: 15rpx;
}

.right{
  font-size: 60rpx;
  line-height: 150rpx;
  position: relative;
  right: 10rpx;
  color: rgb(161, 158, 158);
}

.search_container{
  margin-bottom: 50rpx;
  width: 100%;
}

.section{
  width: 60%;
  height: 100rpx;
  line-height: 100rpx;
  margin: 0 auto;
  text-align: center;
  background-color: rgb(255, 255, 255);
  color:rgb(65, 63, 63);
  border-radius: 70rpx;
  box-shadow: rgb(226, 221, 221) 4rpx 4rpx 15rpx;
}